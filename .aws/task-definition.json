{
  "family": "bookshop-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "bookshop-server",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/bookshop-server:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "5000"
        },
        {
          "name": "MONGO_URI",
          "value": "mongodb://mongo:27017/BookShopDB"
        }
      ],
      "secrets": [
        {
          "name": "CLOUDINARY_CLOUD_NAME",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:bookshop/cloudinary:cloud_name::"
        },
        {
          "name": "CLOUDINARY_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:bookshop/cloudinary:api_key::"
        },
        {
          "name": "CLOUDINARY_API_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:bookshop/cloudinary:api_secret::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/bookshop",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "server"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "node -e \"require('http').get('http://localhost:5000', (r) => process.exit(r.statusCode === 200 ? 0 : 1))\""],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    },
    {
      "name": "bookshop-client",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/bookshop-client:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/bookshop",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "client"
        }
      },
      "dependsOn": [
        {
          "containerName": "bookshop-server",
          "condition": "HEALTHY"
        }
      ]
    }
  ]
}
